<div class="row">
<% if flash[:error] %>
  	<div class="alert alert-danger alert-dismissible" role="alert">
    	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    	<string>Error!</string> <%= flash[:error] %>
    </div>
  <% end %>
</div>

<div class="page-header text-center">
	<h3>Create new answers to current questions:</h3>
</div>
<%= form_for @answer, as: :answer, url: answers_answers_path, method: :create do |f| %>
	<div class="form-group">
		<%= f.label "Part Number:" %> 
		<%= f.text_field :part_num, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label "Question Number:" %> 
		<%= f.text_field :question_num, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label "Answer:" %> 
		<%= f.text_field :answer, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label "Test Number:" %> 
		<%= f.text_field :test_num, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label "Exclude from grading:" %> 
		<%= f.check_box :exclude %>
	</div>
	<div class="form-group">
		<div class="btn-group">
			<%= f.submit "Create", class: "btn btn-success" %>		
		</div>
	</div>
<% end %>
<%= link_to "<< Back", answers_answers_path %>
