<div class="row">
  <% if flash[:notice] %>
    <div class="alert alert-success alert-dismissible" role="alert">
    	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    	<strong>Succes!</strong> <%= flash[:notice] %>
    </div>
  <% elsif flash[:error] %>
  	<div class="alert alert-danger alert-dismissible" role="alert">
    	<button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
    	<string>Error!</string> <%= flash[:error] %>
    </div>
  <% end %>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Part Number</th>
			<th>Question Number</th>
			<th>Answer</th>
			<th/>
		</tr>
	</thead>
	<tbody>
		<% @answers.each do |answer| %>
			<tr>
				<td><%= answer.part_num %></td>
				<td><%= answer.question_num %></td>
				<td><%= answer.answer %></td>
				<td><%= link_to "Edit", edit_answers_answer_path(answer.id) %> | <%= link_to "Delete", answers_answer_path(answer.id), method: :delete, confirm: "Are you sure you want to delete this question?" %></td>
			</tr>
		<% end %>
		<tr>
			<td/>
			<td/>
			<td/>
			<td><%= link_to "Add Answer", new_answers_answer_path %></td>
	</tbody>
</table>