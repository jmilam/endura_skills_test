<div class="page-header text-center">
	<h3>Edit existing answers to questions:</h3>
</div>
<%= form_for @answer, as: :answer, url: answers_answer_path, method: :put do |f| %>
	<div class="form-group">
		<%= f.label "Part Number:" %> 
		<%= f.text_field :part_num, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label "Question Number:" %> 
		<%= f.text_field :question_num, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label "Answer:" %> 
		<%= f.text_field :answer, class: "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label "Test Number:" %> 
		<%= f.text_field :test_num, class: "form-control" %>
	</div>
	<div class="form-group">
		<div class="btn-group">
			<%= f.submit "Update", class: "btn btn-success" %>		
		</div>
	</div>
<% end %>
<%= link_to "<< Back", answers_answers_path %>
